<% unless (controller_name == "baskets" || controller_name == "payments" || controller_name == "orders" || controller_name == "contacts") %>
  <% if user_signed_in? && @basket.basketItems.count > 0 %>
    <div class="basket-setter">
      <%= link_to basket_path(@basket) do %>
        <div class="basket-link">
          MY BASKET
        </div>
      <% end %>
  </div>
  <% end %>
<% end %>
